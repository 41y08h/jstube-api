generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id       Int        @id @default(autoincrement())
  name     String     @db.VarChar(255)
  email    String     @unique @db.VarChar(255)
  picture  String?
  provider String     @db.VarChar(20)
  pid      String     @db.VarChar(100)
  comments comments[]
  videos   videos[]
}

/// The underlying table does not contain a valid unique identifier and can therefore currently not be handled by the Prisma Client.
model videos {
  title       String
  description String
  src         String
  thumbnail   String
  duration    Int
  user_id     Int?
  id          Int        @id @default(autoincrement())
  views       Int?       @default(0)
  user        users?     @relation(fields: [user_id], references: [id])
  comments    comments[]
}

model comments {
  id                                                    Int        @id @default(autoincrement())
  text                                                  String
  video_id                                              Int
  user_id                                               Int
  reply_to_comment_id                                   Int?
  base_comment_id                                       Int?
  comments_commentsTocomments_base_comment_id           comments?  @relation("commentsTocomments_base_comment_id", fields: [base_comment_id], references: [id])
  comments_commentsTocomments_reply_to_comment_id       comments?  @relation("commentsTocomments_reply_to_comment_id", fields: [reply_to_comment_id], references: [id])
  user                                                  users      @relation(fields: [user_id], references: [id])
  video                                                 videos     @relation(fields: [video_id], references: [id])
  other_comments_commentsTocomments_base_comment_id     comments[] @relation("commentsTocomments_base_comment_id")
  other_comments_commentsTocomments_reply_to_comment_id comments[] @relation("commentsTocomments_reply_to_comment_id")
}
