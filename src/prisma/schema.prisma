generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["selectRelationCount"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id       Int        @id @default(autoincrement())
  name     String     @db.VarChar(255)
  email    String     @unique @db.VarChar(255)
  picture  String?
  provider String     @db.VarChar(20)
  pid      String     @db.VarChar(100)
  comments comments[]
  videos   videos[]
}

model videos {
  title       String
  description String
  src         String
  thumbnail   String
  duration    Int
  userId      Int?
  id          Int        @id @default(autoincrement())
  views       Int?       @default(0)
  channel     users?     @relation(fields: [userId], references: [id])
  comments    comments[]
}

model comments {
  id               Int        @id @default(autoincrement())
  text             String
  videoId          Int
  userId           Int
  replyToCommentId Int?
  baseCommentId    Int?
  baseComment      comments?  @relation("baseComment", fields: [baseCommentId], references: [id])
  replyToComment   comments?  @relation("replyToComment", fields: [replyToCommentId], references: [id])
  author           users      @relation(fields: [userId], references: [id])
  videos           videos     @relation(fields: [videoId], references: [id])
  replies          comments[] @relation("baseComment")
  directReplies    comments[] @relation("replyToComment")
}
